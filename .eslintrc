{
  "extends": "airbnb",

  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
    },
  },

  "settings": {
      "import/resolver": {
        "jspm": {
          "moduleDirectory": "jspm_packages",
          "rootDir": "examples"
        },
        "node": true
      }
  },

  "rules": {
    "max-len": ["error", 150],
    "new-cap": [2, {
      "capIsNewExceptions": ["Velocity"]
    }]
  }
}
